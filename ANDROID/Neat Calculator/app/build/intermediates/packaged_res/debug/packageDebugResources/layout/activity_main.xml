<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


   <ImageView
       android:id="@+id/imageView2"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_gravity="center"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:layout_marginTop="30dp"



       app:srcCompat="@drawable/img" />

   <EditText
       android:id="@+id/text1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="10dp"
       android:layout_marginRight="20dp"
       android:ems="10"
       android:hint="@string/enter_first_number"
       android:inputType="number" />

   <EditText
       android:id="@+id/text2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="10dp"
       android:layout_marginRight="20dp"
       android:ems="10"
       android:hint="@string/enter_second_number"
       android:inputType="number" />
   <EditText
       android:id="@+id/text3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="10dp"
       android:layout_marginRight="20dp"
       android:ems="10"
       android:hint="answer will apperar here"
       android:inputType="text"
        />



   <Button
       android:id="@+id/addb"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="50dp"
       android:layout_marginRight="20dp"
       android:text="@string/add" />

   <Button
       android:id="@+id/substractb"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:text="@string/substract" />

   <Button
       android:id="@+id/multiplyb"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:text="@string/multiply" />

   <Button
       android:id="@+id/divideb"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:text="@string/divide" />
</LinearLayout>